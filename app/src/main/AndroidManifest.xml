<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mecha">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mecha">
        <activity
            android:name=".customer.history.ReportProblemActivity"
            android:exported="false" />
        <activity
            android:name=".customer.history.TransactionDetailCompletedOrderActivity"
            android:exported="false" />
        <activity
            android:name=".customer.PaymentActivity"
            android:exported="false" />
        <!--
             TODO: Before you run your application, you need a Google Maps API key.

             To get one, follow the directions here:

                https://developers.google.com/maps/documentation/android-sdk/get-api-key

             Once you have your API key (it starts with "AIza"), define a new property in your
             project's local.properties file (e.g. MAPS_API_KEY=Aiza...), and replace the
             "YOUR_API_KEY" string in this file with "${MAPS_API_KEY}".
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/api" />

        <activity
            android:name=".MapsActivity"
            android:exported="false"
            android:label="Map" />
        <activity
            android:name=".customer.home.VehicleServiceActivity"
            android:exported="false" />
        <activity
            android:name=".customer.home.TireFixActivity"
            android:exported="false" />
        <activity
            android:name=".customer.settings.ChangePasswordCustomerActivity"
            android:exported="false" />
        <activity
            android:name=".customer.history.HistoryTabActivity"
            android:exported="false" />
        <activity
            android:name=".customer.home.EmergencyFixActivity"
            android:exported="false" />
        <activity
            android:name=".authui.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".authui.SignUpMechActivity"
            android:exported="false" />
        <activity
            android:name=".authui.SignUpChooseRoleActivity"
            android:exported="false" />
        <activity
            android:name=".customer.home.FixActivity"
            android:exported="false" />
        <activity
            android:name=".customer.settings.SettingEditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".customer.home.CallMechaActivity"
            android:exported="false"
            android:label="@string/title_activity_call_mecha" />
        <activity
            android:name=".authui.SignUpCustomerActivity"
            android:exported="false" />
        <activity
            android:name=".customer.CustomerMenuActivity"
            android:exported="false" />
        <activity
            android:name=".authui.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".authui.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authui.MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>