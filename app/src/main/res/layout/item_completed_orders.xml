<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="5dp"
    android:id="@+id/linearLayoutItemCompletedOrders">

    <LinearLayout
        android:id="@+id/ordersCompletedLihat"
        android:layout_below="@id/onGoingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fixing_icon"
            android:layout_marginRight="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alamatPerbaikanView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl.Pamungkas"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/statusPerbaikanView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fixing. . ."
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/waktuPerbaikanView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="05 Apr 10:35 AM"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line"/>

</LinearLayout>