<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authui.SignUpChooseRoleActivity"
    android:background="@drawable/ic_bg_sign_up_role"
    android:paddingHorizontal="22dp"
    android:paddingVertical="28dp">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_back_white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnBack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Choose your \n Sign Up Role"
        android:textColor="@color/white"
        android:textSize="24sp" />


    <ImageButton
        android:id="@+id/mechRoleButton"
        android:layout_width="145dp"
        android:layout_height="183dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="327dp"
        android:layout_marginBottom="290dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/mech_role"
        />

    <ImageButton
        android:id="@+id/mechCustomerButton"
        android:layout_width="145dp"
        android:layout_height="183dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="327dp"
        android:layout_marginBottom="290dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/customer_role"
        />

</RelativeLayout>